<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenServices" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_500</item>
        <item name="colorPrimaryVariant">@color/main_color_700</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color_200</item>
        <item name="colorSecondaryVariant">@color/second_color_700</item>
        <item name="colorOnSecondary">@color/dark_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //Main background
    <style name="MainBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_dark</item>
    </style>

    //Tab background
    <style name="TabBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/tab_background_dark</item>
    </style>

    //Card background
    <style name="ItemCardBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_background_dark</item>
    </style>

    //Edit text
    <style name="CustomEditText">
        <item name="android:background">@drawable/rounded_edit_text_dark</item>
    </style>

    //Text
    <style name="TextStyle">
        <item name="android:color">@color/light_500</item>
    </style>

    //Icon
    <style name="IconStyle">
        <item name="android:tint">@color/light_500</item>
    </style>

    //Icon clickable
    <style name="IconCircleClickableStyle">
        <item name="android:tint">@color/light_500</item>
        <item name="android:background">@drawable/ripple_circle_dark</item>
    </style>
</resources>