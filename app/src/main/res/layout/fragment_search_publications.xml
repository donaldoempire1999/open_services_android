<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchPublicationsFragment"
        style="@style/MainBackground">

        <LinearLayout
            android:id="@+id/linear_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            style="@style/TabBackground"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Jobs"
                android:textStyle="bold"
                android:textSize="@dimen/text_title" />

            <ImageView
                android:id="@+id/image_button_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                style="@style/IconCircleClickableStyle"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:contentDescription="Search"
                android:padding="2dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/image_button_filter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                style="@style/IconCircleClickableStyle"
                android:contentDescription="Filter"
                android:padding="2dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_round_format_list_bulleted_24" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear_tab_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/linear_search_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="100dp">

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_search_filter"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>