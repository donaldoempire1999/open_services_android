<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="publication"
            type="com.example.openservices.models.Publication" />
        <variable
            name="isLoadingSave"
            type="Boolean" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onboarding.AddPost2Fragment"
        style="@style/MainBackground">

        <androidx.core.widget.NestedScrollView
            style="@style/MainBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/button_next"
            app:layout_constraintTop_toBottomOf="@+id/button_skip">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_post"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/text_sub_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/text_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="difficulty details"
                    android:textSize="@dimen/text_detail"
                    app:layout_constraintBottom_toTopOf="@+id/linear_edit_difficulty"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/text_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/diamond_icon" />

                <LinearLayout
                    android:id="@+id/linear_edit_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/linear_edit_priority"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center">
                    <RadioGroup
                        android:id="@+id/radio_group_difficulty"
                        android:checkedButton="@+id/radio_button_1"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Difficulty : "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <RadioButton
                            android:id="@+id/radio_button_difficulty_low"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="low"/>
                        <RadioButton
                            android:id="@+id/radio_button_difficulty_medium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="medium"/>
                        <RadioButton
                            android:id="@+id/radio_button_difficulty_high"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="high"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_edit_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_post_base_amount"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center">
                    <RadioGroup
                        android:id="@+id/radio_group_priority"
                        android:checkedButton="@+id/radio_button_1"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Priority : "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <RadioButton
                            android:id="@+id/radio_button_priority_low"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"/>
                        <RadioButton
                            android:id="@+id/radio_button_priority_medium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"/>
                        <RadioButton
                            android:id="@+id/radio_button_priority_high"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="2"/>
                    </RadioGroup>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_post_base_amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="base amount"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:errorEnabled="true"
                    android:soundEffectsEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_post_base_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        app:textInputLayoutFocusedRectEnabled="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:autoLink="all"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/main_color_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/light_300" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_skip"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:autoLink="all"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/skip"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@color/main_color_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/light_300" />

        <LinearLayout
            android:id="@+id/linear_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/button_next"
            app:layout_constraintEnd_toStartOf="@+id/button_next"
            app:layout_constraintStart_toEndOf="@+id/button_back"
            app:layout_constraintTop_toTopOf="@+id/button_next">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="2dp"
                android:src="@color/light_400"
                app:riv_corner_radius="@dimen/dot_size" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="2dp"
                android:src="@color/main_color_200"
                app:riv_corner_radius="@dimen/dot_size" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="2dp"
                android:src="@color/light_400"
                app:riv_corner_radius="@dimen/dot_size" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:autoLink="all"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/main_color_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/light_300" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>